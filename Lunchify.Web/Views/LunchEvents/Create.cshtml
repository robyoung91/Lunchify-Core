                    @Html.DropDownListFor(m => m.SelectedUserId, Model.UserSelectList)
                    @Html.ValidationMessageFor(m => m.SelectedUserId, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.LunchEvent.Lunch, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(m => m.SelectedLunchId, Model.LunchSelectList)
                    @Html.ValidationMessageFor(m => m.SelectedLunchId, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.LunchEvent.Location, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(m => m.Location, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(m => m.Location, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.LunchEvent.Capacity, htmlAttributes: new { @class = "control-label col-md-2" })
